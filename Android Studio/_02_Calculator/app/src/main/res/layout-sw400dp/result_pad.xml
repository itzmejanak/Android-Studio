<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="?colorSurface"
    android:clipToPadding="false"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto">
    <com.gigaworks.tech.calculator.ui.view.CalculatorEditText
        android:textAppearance="@style/TextAppearance.CalculatorPlus.Headline2"
        android:gravity="end|center"
        android:id="@id/expression"
        android:background="@null"
        android:paddingBottom="@dimen/space_xxxl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cursorVisible="false"
        android:singleLine="true"
        android:includeFontPadding="false"
        android:inputType="textNoSuggestions"
        android:fontFamily="@font/lato"
        android:paddingEnd="@dimen/space_xl"
        custom:layout_constraintBottom_toTopOf="@id/result"
        custom:layout_constraintEnd_toEndOf="parent"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintTop_toTopOf="parent"
        custom:maxTextSize="63.0sp"
        custom:minTextSize="50.0sp" />
    <com.gigaworks.tech.calculator.ui.view.CalculatorEditText
        android:textAppearance="@style/TextAppearance.CalculatorPlus.Headline3"
        android:textColor="?textDisable"
        android:gravity="end|bottom|center"
        android:id="@id/result"
        android:background="@null"
        android:paddingBottom="@dimen/space_xl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cursorVisible="false"
        android:singleLine="true"
        android:includeFontPadding="false"
        android:inputType="textNoSuggestions"
        android:fontFamily="@font/lato"
        android:paddingEnd="@dimen/space_xl"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintEnd_toEndOf="parent"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintTop_toBottomOf="@id/expression"
        custom:maxTextSize="50.0dip"
        custom:minTextSize="36.0sp" />
</androidx.constraintlayout.widget.ConstraintLayout>