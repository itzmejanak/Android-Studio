<resources>
    <!-- Base style for Buttons -->
    <style name="CalculatorButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">28sp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:backgroundTint">#111522</item> <!-- Change color as per your preference -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">15dp</item>
    </style>

    <!-- Style for Number Buttons specifically -->
    <style name="NumberButton" parent="CalculatorButton">
        <item name="android:backgroundTint">#E80A1113</item> <!-- Change color as per your preference -->
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Style for Rows in the Calculator -->
    <style name="ButtonRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>
