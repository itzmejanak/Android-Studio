<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient -->
    <gradient
        android:startColor="#FF4081"
        android:endColor="#3F51B5"
        android:angle="45"/>

    <!-- Stroke (border) -->
    <stroke
        android:width="2dp"
        android:color="#000000" />

    <!-- Background color -->
    <solid android:color="@color/colored_text" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" /> <!-- Radius for rounded corners -->
</shape>
